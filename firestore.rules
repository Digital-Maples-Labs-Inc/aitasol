rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check user role
    function isAdmin() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isEditor() {
      return request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'editor'];
    }
    
    // Pages - public read, authenticated write for editors
    match /pages/{pageId} {
      allow read: if true;
      allow create, update: if isEditor();
      allow delete: if isAdmin();
    }
    
    // Blogs - public read published, authenticated write for editors
    match /blogs/{blogId} {
      allow read: if resource.data.status == 'published' || isEditor();
      allow create, update: if isEditor();
      allow delete: if isAdmin();
    }
    
    // Users - read own OR admin/editor can read all, admin write
    match /users/{userId} {
      // Allow reading own user document OR allow admin/editor to read all users
      // Storage rules can read user documents when checking permissions (they use firestore.get() which bypasses these rules)
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        isEditor()
      );
      allow create, update, delete: if isAdmin();
    }
    
    // Media metadata (optional)
    match /media/{mediaId} {
      allow read: if true;
      allow write: if isEditor();
    }
    
    // Themes - public read active, admin write
    match /themes/{themeId} {
      allow read: if true; // Public can read themes
      allow create, update: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow delete: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}

